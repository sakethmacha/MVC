@{
    ViewData["Title"] = "Human Verification";
}

<div class="d-flex justify-content-center align-items-center"
     style="height: 80vh; background: linear-gradient(135deg, #e3f2fd, #ffffff);">

    <div class="card shadow-lg p-4" style="width: 420px; border-radius: 20px;">

        <div class="text-center mb-4">
            <img src="https://cdn-icons-png.flaticon.com/512/456/456212.png"
                 style="width: 80px; opacity: .85;" />
            <h3 class="mt-3" style="font-weight:600;">Verify You’re Human</h3>
            <p class="text-muted mt-2">
                To proceed, please confirm that you are not a robot.
            </p>
        </div>

        <a href="?human=true"
           class="btn btn-primary w-100 mt-2"
           style="padding: 12px; font-size: 18px; border-radius: 12px;">
            ✔ YES, I AM HUMAN
        </a>

        <p class="text-center text-muted mt-3" style="font-size: 14px;">
            This step helps us prevent automated submissions.
        </p>

    </div>
</div>
